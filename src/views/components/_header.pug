mixin header()
  header.header
    .container
      .header__row
        .header__catalog
          .header__catalog-button
            .header__catalog-text
              |Акционный каталог
            .header__catalog-icon
              +arrow-svg
        .header__store
          a.header__store-button(href='#')
            .header__store-text 
              |Интернет-магазин
            .header__store-icon
              +cursor-svg
        .header__logo
          a.header__logo-link(href="#")
            +logo-svg
        .header__city
          .header__city-button
            .header__city-text 
              |Саратов
            .header__city-icon
              +arrow-svg('header__arrow')
        .header__nav
          a.header__nav-link(href="#") 
            |Где купить
        .header__search
          .header__search-button 
            +search-svg('header__search-icon')
        .header__button
          .header__button-button(data-modal-button='3')
            .header__button-image
        .nav-modal
          .nav-modal__content
            .nav-modal__top
              ul.nav-modal__list
                -
                  var data = [
                    'Где купить',
                    'Акционный каталог',
                    'Поставщикам',
                    'Арендодателям',
                    'О компании',
                    'Новости',
                    'Рецепты',
                    'Вакансии',
                    'Контакты',
                  ];
                li.nav-modal__item
                  a.nav-modal__link(href="action-catalog.html")
                    |#{item}
                each item in data
                  li.nav-modal__item
                    a.nav-modal__link(href="#")
                      |#{item}
            .nav-modal__bottom
              .footer__text 
                |По вопросам качества продукции
              .footer__media
                .footer__media-item
                  a.footer__phone(href="#") 
                    |8 800 333-82-54
                .footer__media-item
                  a.footer__mail(href="#") 
                    |info@dubki-producty.ru
