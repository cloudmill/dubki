  footer.footer(class=(opt.mod ? `footer--${opt.mod}` : ''))
    .footer__frame
      .footer__layout
      .container
        .footer__content 
          .footer__top 
            nav.footer__nav 
              ul.footer__list 
                li.footer__item 
                  a.footer__link(href="#")(data-aos="fade-up") 
                    |Акционный каталог
                li.footer__item 
                  a.footer__link(href="#")(data-aos="fade-up") 
                    |Где купить
                li.footer__item 
                  a.footer__link(href="#")(data-aos="fade-up") 
                    |Поставщикам
                li.footer__item 
                  a.footer__link(href="#")(data-aos="fade-up")
                    |Арендодателям
                li.footer__item 
                  a.footer__link(href="#")(data-aos="fade-up")
                    |О компании
                li.footer__item 
                  a.footer__link(href="#")(data-aos="fade-up")
                    |Новости
                li.footer__item 
                  a.footer__link(href="#")(data-aos="fade-up")
                    |Рецепты
                li.footer__item 
                  a.footer__link(href="#")(data-aos="fade-up")
                    |Вакансии
                li.footer__item 
                  a.footer__link(href="#")(data-aos="fade-up")
                    |Контакты
            .footer__social
              .social 
                ul.social__list
                  li.social__item(data-aos="fade-up")
                    a.social__row(href='#')
                      .social__col
                        .social__img
                          +instagram-svg
                      .social__col
                        .social__link
                          |Instagram
                  li.social__item(data-aos="fade-up")
                    a.social__row(href='#')
                      .social__col
                        .social__img(href="#") 
                          +vk-svg
                      .social__col
                        .social__link(href="#")
                          |Вконтакте
                  li.social__item(data-aos="fade-up")
                    a.social__row(href='#')
                      .social__col
                        .social__img(href="#") 
                          +facebook-svg
                      .social__col
                        .social__link(href="#")
                          |Facebook
                  li.social__item(data-aos="fade-up")
                    a.social__row(href='#')
                      .social__col
                        .social__img(href="#") 
                          +classmates-svg
                      .social__col
                        .social__link(href="#")
                          |Одноклассники
          .footer__bottom
            .footer__docs(data-aos="fade-up")
              .footer__corp
                |Сделано в 
                a.footer__author(href="#")  
                  |CloudMill
              .footer__corp
                |© Дубки. Продукты от производителя. 2021
            .footer__contact(data-aos="fade-up")
              .footer__text 
                |По вопросам качества продукции
              .footer__media
                .footer__media-item
                  a.footer__phone(href="#") 
                    |8 800 333-82-54
                .footer__media-item
                  a.footer__mail(href="#") 
                    |info@dubki-producty.ru

