                    input.form__input(type="text" name="email" placeholder="E-mail")
                  .form__item 
                    input.form__input(type="text" name="addres" placeholder="Адрес помещения")
                  .form__wrapper 
                    .form__row 
                      .form__row-wrapper
                        button.form__button 
                          |Прикрепить файлы
                      .form__text  
                        |Например, фотографии, план
                  .checkbox 
                    label.checkbox__label 
                      input.checkbox__input(type="checkbox")
                      .checkbox__box 
                        +check-svg('checkbox__icon')
