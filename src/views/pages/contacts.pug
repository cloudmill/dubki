                  ul.social__list
                    li.social__item
                      a.social__row(href='#')
                        .social__col
                          .social__img
                            +instagram-svg('contacts__icon')
                        .social__col
                          .social__link
                            |Instagram
                    li.social__item
                      a.social__row(href='#')
                        .social__col
                          .social__img(href="#") 
                            +vk-svg('contacts__icon')
                        .social__col
                          .social__link(href="#")
                            |Вконтакте
                  ul.social__list
                    li.social__item
                      a.social__row(href='#')
                        .social__col
                          .social__img
                            +facebook-svg('contacts__icon')
                        .social__col
                          .social__link
                            |Facebook
                    li.social__item
                      a.social__row(href='#')
                        .social__col
