extends ../layouts/master.pug



block content 
  .section--grey
    .section__frame.section__frame--white
      .container 
        .block
          .block__wrapper
            h3.block__title 
              |Рецепты
            .block__list
              ul.block-list
                li.block-list__item 
                  p.block-list__item-text 
                    |Главная
                li.block-list__item
                  .block-list__item-icon
                    +leaflet-svg 
                  p.block-list__item-text.block-list_item-text--active
                    |Рецепты
  .section--grey.section--catalog 
    .container 
      .section__inner 
        .recipes
          .recipes__row 
            .recipes__col
              .recipes__text 
                |Тип блюда
            .recipes__col
              .recipes__text 
                |Время готовки
          .section--catalog 
            .recipes__wrapper 
              .slider
                ul.recipes__list 
                  - for (i = 0; i < 9; i++)
                    li.recipes__item
                      a.slider__item(href='#')
                        .slider__container
                          .slider__frame
                            img.slider__photo(src="assets/images/slider-1.jpg", alt="")
                          .slider__info 
                            .slider__time.slider__time--green
                              .slider__icon
                                +clock-svg
                              |30 мин
                            .slider__time
                              |Завтрак
                        h3.slider__title.slider__title--black
                          |Пицца с грибами и колбасой
              .wrapper 
                .button--s
                  |Показать еще



block footer 
  +footer({
    mod: 'catalog-grey',
  })