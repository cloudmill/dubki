extends ../layouts/master.pug



block header 
  +header({
    mod: 'dark',
  })

block content 
  .section--grey
    .section__frame.section__frame--white
      .container 
        .block
          .block__wrapper
            h3.block__title(data-aos="fade-up")  
              |Где купить
            .block__list
              ul.block-list(data-aos="fade-up") 
                li.block-list__item 
                  p.block-list__item-text 
                    |Главная
                li.block-list__item
                  .block-list__item-icon
                    +leaflet-svg 
                  p.block-list__item-text.block-list__item-text--active
                    |Где купить
  .section--grey 
    .container 
      .map 
        .map__inner 
          .map__container
            .map-tabs
              .map-tabs__wrapper
                .map-tabs__container 
                  .map-tabs__row(data-aos="fade-up")  
                    .map-tabs__item 
                      .map-tabs__button.map-tabs__button--active
                        |На карте
                    .map-tabs__item 
                      .map-tabs__button
                        |Списком
            .placemarks
              -
                var placemarks = [
                  {
                    "label": "В магазине самообслуживание",
                    "title": "г. Саратов, ул. Красноармейская, д. 13 а",
                    "times": [
                      "пнд—вс  |  9—18",
                    ],
                    "coordinates": [
                      "51.540679",
                      "51.540679",
                    ],
                  },
                  {
                    "title": "г. Саратов, ул. Н. Островского, д. 154",
                    "times": [
                      "пнд—вс  |  9—20",
                      "пнд—вс  |  9—20",
                      "пнд—вс  |  9—20"
                    ],
                    "coordinates": [
                      "51.540679",
                      "52.540679",
                    ],
                  },
                  {
                    "title": "г. Саратов, ул. Бульварная, д. 13В",
                    "times": [
                      "пнд—вс  |  9—20",
                    ],
                    "coordinates": [
                      "52.540679",
                      "53.540679",
                    ],
                  },
                  {
                    "title": "г. Саратов, Ленинский р-н, ул. Жилая, д. 7г",
                    "times": [
                      "пнд—вс  |  9—20",
                    ],
                    "coordinates": [
                      "52.540679",
                      "51.540679",
                    ],
                  },
                ]
              |#{JSON.stringify(placemarks)}
            .map__list
              .map-select 
                .select-wrapper
                  .map-select__inner
                    .map-select__container 
                      .map-select__row(data-aos="fade-up") 
                        .map-select__col
                          .map-select__text
                            |Город
                        .map-select__col
                          .select
                            select.select__select(name="city")(style="width: 100%")
                              option(value="saratov", selected) 
                                |Саратов
                              option(value="moscov") 
                                |Москва
                              option(value="spb") 
                                |Санкт-Питербург
                              option(value="voronezh") 
                                |Воронеж
                              option(value="saratov") 
                                |Саратов
                              option(value="moscov") 
                                |Москва
                              option(value="spb") 
                                |Санкт-Питербург
                              option(value="voronezh") 
                                |Воронеж
                              option(value="saratov") 
                                |Саратов
                              option(value="moscov") 
                                |Москва
                              option(value="spb") 
                                |Санкт-Питербург
                              option(value="voronezh") 
                                |Воронеж
              ul.map-list(data-aos="fade-up") 
                each placemark in placemarks
                  li.map-list__item
                    .map-list__wrapper
                      .map-balloon
                        .map-balloon__container 
                          if ('label' in placemark)
                            .map-balloon__store  
                              |#{placemark.label}
                          .map-balloon__addres 
                            |#{placemark.title}
                          .map-balloon__times
                            each time in placemark.times
                              .map-balloon__time
                                |#{time}
            #map(data-aos="fade-up") 
  
block footer 
  +footer({
    mod: 'catalog-grey',
  })